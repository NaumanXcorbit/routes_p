<div class="modal-body">
  <div class="col-lg-12">
    <p>
      <strong>Name:</strong>
      <%= book.name %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= book.price %>
    </p>

    <p>
      <strong>Published:</strong>
      <%= formatted_date(book.created_at) %>
    </p>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary close_modal" data-bs-dismiss="modal">Close</button>
</div>
